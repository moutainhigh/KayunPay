function allRob(){
	YRHX.ajax({
		url:"/queryNewInvestBid",
		success:function(sucData){
			var htmlList="<li><div class='index_allTime'>#{loanDateTime}分钟前</div><a href='javascript:;' class='index_allTime_font'><span>#{payUserName}</span>#{type}了#{loanTitle}</a></li>";
			var htmlBox=$(".index_all_list ul");
			    htmlBox.html("");
			for(var i=0 ;i<sucData.length;i++){
				var row = sucData[i];		
				var type=row['productType'];
				switch(type){
					case 'A':
						row['loanTitle']='质押宝 ' + row['loanNo'];
						break;
					case 'B':
						row['loanTitle']='车稳盈 ' + row['loanNo'];
						break;
					case 'C':
						row['loanTitle']='房稳赚 ' + row['loanNo'];
						break;
					case 'E':
						row['loanTitle']='易分期 ' + row['loanNo'];
						break;
					default:
						row["loanTitle"] = dealTitle( row["loanTitle"] ); 
						break;
				}
				var len = row["payUserName"].length;
				if (0 == row["payUserName"].indexOf("*")) {
					row["payUserName"] = row["payUserName"]
				} 
				else {
					if (len < 3) {
						row["payUserName"] = row["payUserName"] + "***";
					} else if (len < 11) {
						row["payUserName"] = row["payUserName"].substr(0,2)+ "***";
					} else if (len == 11) {
						row["payUserName"] = row["payUserName"].substr(0,2)+ "***" + row["payUserName"].substr(7);
					} else {
						row["payUserName"] = row["payUserName"].substr(0,2)+ "***";
					}
				}
				if(row["payAmount"]>=1000000){
				row["payAmount"] = YRHX.toDecimal2(row["payAmount"] / 1000000)+"万";
				}else{
				row["payAmount"] = YRHX.toDecimal2(row["payAmount"] / 100)+"元";
				}
				if(row["type"]=="B"){
					row["type"] = "承接";
				}else{
					row["type"] = "加入";
				}
				var tmpHtml = htmlList.makeHtml(row);
				htmlBox.append(tmpHtml);	
			}
		}
	});
}

function scrollNews(obj){  
    var $self=obj.find('ul:first');  
    var lineHeight=$self.find('li:first').height();  
    $self.animate({  
        'marginTop':-lineHeight+'px'  
    },600,function(){  
        $self.css({marginTop:0}).find('li:first').appendTo($self);  
    });  
}  

function scrollNews1(obj){  
    var $self=obj.find('ul:first');  
    var lineHeight=$self.find('li:lt(3)').height();  
    $self.animate({  
        'marginTop':-lineHeight+'px'  
    },600,function(){  
        $self.css({marginTop:0}).find('li:lt(3)').appendTo($self);  
    });  
}  

