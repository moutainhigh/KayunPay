	    	var allTotal_count=(YRHX.toDecimal2(sucData.all_loanAmount / 10.0 / 10.0).replace('.00','') + '').replaceAll(',',''); 
	    	
	    	var all_len=allTotal_count.length,month_len=month_count.length,today_len=today_count.length;
	    			
	    	var all_millon = allTotal_count.substring(0,all_len-8),
	    		all_thousand = allTotal_count.substring(all_len-8,all_len-4),
	    		all_unit = allTotal_count.substring(all_len-4,all_len),
	    		month_thousand = month_count.substring(0,month_len-4),
	    		month_unit = month_count.substring(month_len-4,month_len);
	    	$('.million').text(all_millon);
	    	$('.thousand').text(all_thousand);
	    	$('.unit').text(all_unit);
	    	$('.thousand1').text(month_thousand);
	    	$('.unit1').text(month_unit);
	    	$('.thousand2').text(today_count);
	    },
	    error: function (errData) {

	    }
	});
})
